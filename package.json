{
  "name": "recommender-feedback",
  "description": "Recommender Feedback web server",
  "version": "0.1.0",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DBCDK/recommender-feedback.git"
  },
  "author": "DBCDK",
  "bugs": {
    "url": "https://github.com/DBCDK/recommender-feedback/issues"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^2.13.1",
    "eslint": "^4.4.1",
    "eslint-plugin-react": "^7.3.0",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "nsrun": "^1.1.2",
    "nyc": "^11.2.1",
    "resolve": "^1.4.0",
    "sinon": "^3.1.0",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "helmet": "^3.6.1",
    "history": "^4.7.2",
    "is-my-json-valid": "^2.16.1",
    "knex": "^0.13.0",
    "lodash": "^4.17.4",
    "nodemailer": "^4.1.1",
    "pg": "^7.1.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.0.12",
    "redux": "^3.7.2",
    "uuid": "^3.1.0"
  },
  "proxy": "http://localhost:3001",
  "scripts": {
    "build": "react-scripts build",
    "coverage": "run-s coverage-nodb coverage-integration",
    "coverage-db": ". ./current.env && nyc --reporter=lcov _mocha -- src/**/*_test.js",
    "coverage-integration": "run-p start-backend-once coverage-integration-delayed",
    "coverage-integration-delayed": "sleep 1 && nsrun coverage-db && ./kill-running-server.sh",
    "coverage-nodb": "nyc --reporter=lcov _mocha -- src/**/*_no-db.js",
    "lint-js": "eslint src",
    "postinstall": "./setup-node-env.sh",
    "start": "run-p start-backend start-frontend",
    "start-backend": ". ./current.env && nodemon --exec node --no-stdin src/server/main.js --watch src/server",
    "start-backend-once": ". ./current.env && node src/server/main.js || true",
    "start-frontend": "react-scripts start",
    "test": "run-s test-units lint-js",
    "test-db": "run-p start-backend-once test-integration-delayed",
    "test-frontend": "react-scripts test --env=jsdom",
    "test-full": "run-s test-nodb test-db",
    "test-integration": ". ./current.env && mocha src/integration/**/*_test.js",
    "test-integration-delayed": "sleep 1 && nsrun test-integration && ./kill-running-server.sh",
    "test-nodb": "mocha src/integration/**/*_no-db.js",
    "test-units": "mocha src/lib/**/*_test.js src/server/**/*_test.js"
  }
}
